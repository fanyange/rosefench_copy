<div class="title">
  <span class="name pull-left"><%= @section.name %></span>
  <span class="more pull-right">当前位置: <%= link_to "首页", root_path %> > <%= link_to @section.name, @section %></span>
</div>
<div class="list dashed">
  <ul>
    <% @section.posts.each do |post| %>
    <li><%= link_to post.title, post.content %> <span class="pull-right"><%= post.created_at.strftime("%Y-%-m-%-d") %></span></li>
    <% end %>
  </ul>
</div>